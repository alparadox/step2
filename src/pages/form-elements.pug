include ../components/text-field/text-field.pug
include ../components/radio/radio.pug
include ../components/checkbox-buttons/checkbox-buttons.pug
include ../components/toggle/toggle.pug
include ../components/rich-checkbox-buttons/rich-checkbox-buttons.pug
include ../components/room-info/room-info.pug
include ../components/bullet-list/bullet-list.pug
include ../components/buttons/buttons.pug
include ../components/rate-button/rate-button.pug
include ../components/subscription-text-field/subscription-text-field.pug
include ../components/range-slider/range-slider.pug
include ../components/like-button/like-button.pug
include ../components/review/review.pug
include ../components/pagination/pagination.pug
include ../components/expandable-checkbox-list/expandable-checkbox-list.pug
include ../components/filter-date-dropdown/filter-date-dropdown.pug
include ../components/date-dropdown/date-dropdown.pug
include ../components/dropdown/dropdown.pug
include ../components/logo.pug

doctype
html
  head
    meta(charset='utf-8')
    meta(name='viewport' content='initial-scale=1.0, width=device-width')
    meta(name='keywords' content='form, elements')
    meta(name='description' content='Form elements')
    title Form elements
    link(rel='stylesheet' href='form-elements.scss' type='text/css')
    script(src='jquery-for-parcel.js')
    script(src='form-elements.js')
  body
    //-
      +text-field({type: 'text', name: 'email', text: 'Email'})
      +checkbox-buttons()
      +radio({name:'male', text:'Мужчина', text2:'Женщина', value:'male', value2:'female'})
      +toggle()
      +rich-checkbox-buttons({title:'Rich Checkbox Buttons'})
      +room-info()
      +bullet-list({title:'Bullet list'})
      +button-painted()
      +button-transparent({text: "click me"})
      +button-text()
      +button-long({text: "перейти к оплате"})
      +rate-button({count:'4'}) 
      +rate-buttonn({count:'5'})
      +subscription-text-field()
      +masked-text-field ({type: 'text', name: 'date', text: 'ДД.ММ.ГГГГ'})
      +range-slider({text:'Range Slider'})
      +like-button({number: '12'})
      +like-button({number: '2'})
      +like-button({number: '7'})
      +review({name: 'Мурад Сарафанов', date: '5 дней назад', text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'})
      +pagination()
      +expandable-checkbox-list ()
      +filter-date-dropdown()
      +date-dropdown({text1: 'date Dropdown', text2: 'date Dropdown'})
      +dropdown({size: 'no'})

    .form-elements
      .form-elements__logo
        +logo()
      .form-elements__content
        .form-elements__colomn-wrapper
          .form-elements__left
            .form-elements__text-field
              .form-elements__text-field-title
                p.form-elements__text-field-text Text Field
                p.form-elements__text-field-description Default
              .form-elements__text-field-element
                +text-field({type: 'text', name: 'email', text: 'Email'})
            .form-elements__text-field-hover
              .form-elements__text-field-hover-title
                p.form-elements__text-field-hover-text Text Field
                p.form-elements__text-field-hover-description Hover / Focus
              .form-elements__text-field-hover-element
                +text-field({type: 'text', name: 'email', text: 'Email'})
            .form-elements__dropdown-guest-default
              .form-elements__dropdown-guest-default-title
                p.form-elements__dropdown-guest-default-text dropdown
                p.form-elements__dropdown-guest-default-description Default
              .form-elements__dropdown-guest-default-element
                +dropdown({size: 'no'})
            .form-elements__masked-text-field
              .form-elements__masked-text-field-title
                p.form-elements__masked-text-field-text Masked Text Field
                p.form-elements__masked-text-field-description Default
              .form-elements__masked-text-field-element
                +masked-text-field ({type: 'text', name: 'date', text: 'ДД.ММ.ГГГГ'})
            .form-elements__date-dropdown
              +date-dropdown({text1: 'date Dropdown', text2: 'date Dropdown'})
            .form-elements__filter-date-dropdown
              .form-elements__filter-date-dropdown-title filter date dropdown
              .form-elements__filter-date-dropdown-element
                +filter-date-dropdown()
            .form-elements__subscription-text-field
              .form-elements__subscription-text-field-title subscription text field
              .form-elements__subscription-text-field-element
                +subscription-text-field()
            .form-elements__dropdown-room-default
              .form-elements__dropdown-room-default-title
                p.form-elements__dropdown-room-default-text dropdown
                p.form-elements__dropdown-room-default-description Default
              .form-elements__dropdown-room-default-element
                +dropdown({size: 'small'})
            .form-elements__dropdown-room-expanded
              .form-elements__dropdown-room-expanded-title
                p.form-elements__dropdown-room-expanded-text dropdown
                p.form-elements__dropdown-room-expanded-description expanded
              .form-elements__dropdown-room-expanded-element
                +dropdown({size: 'small'})
            .form-elements__expandable-checkbox
              +expandable-checkbox-list({isClosed:'true', title:'Expandable checkbox list'})
            .form-elements__expandable-checkbox-expanded
              +expandable-checkbox-list({isClosed:'false'})
          .form-elements__center
            .form-elements__checkbox-buttons
              +checkbox-buttons({title:'Checkbox buttons'})
            .form-elements__radio-buttons
              .form-elements__radio-buttons-text Radio Buttons
              .form-elements__radio-buttons-element
                +radio({name:'male', text:'Мужчина', text2:'Женщина', value:'male', value2:'female'})
            .form-elements__toggle
              .form-elements__toggle-text Toggle
              .form-elements__toggle-element-on
                +toggle()
              .form-elements__toggle-element-off
                +toggle()
            .form-elements__like-button
              .form-elements__like-button-text like button
              .form-elements__like-button-element
                .form-elements__like-button-2
                  +like-button({number: '2'})
                .form-elements__like-button-12
                  +like-button({number: '12'})
            .form-elements__rate-button
              .form-elements__rate-button-text rate button
              .form-elements__rate-button-element
                .form-elements__rate-button-4
                  +rate-button({count:'4'}) 
                .form-elements__rate-button-5
                  +rate-button({count:'5'}) 
            .form-elements__dropdown-center
              .form-elements__dropdown-center-text dropdown
              .form-elements__dropdown-center-element
                +dropdown({size: 'no'})
            .form-elements__rich-checkbox
              +rich-checkbox-buttons({title:'Rich Checkbox Buttons'})
          .form-elements__right
            .form-elements__range-slider
              +range-slider({text:'Range Slider'})
            .form-elements__buttons
              .form-elements__buttons-title buttons
              .form-elements__buttons-backgraund
                .form-elements__buttons-backgraund-default
                  +button-painted()
                .form-elements__buttons-backgraund-hover
                  +button-painted()
              .form-elements__buttons-border
                .form-elements__buttons-border-default
                  +button-transparent({text: "click me"})
                .form-elements__buttons-border-hover
                  +button-transparent({text: "click me"})
              .form-elements__buttons-text
                .form-elements__buttons-text-default
                  +button-text()
                .form-elements__buttons-text-hover
                  +button-text()
              .form-elements__buttons-long
                +button-long({text: "перейти к оплате"})
            .form-elements__pagination
              .form-elements__pagination-text pagination
              .form-elements__pagination-element
                +pagination()
            .form-elements__dropdown-right
              .form-elements__dropdown-right-text dropdown
              .form-elements__dropdown-right-element
                +dropdown({size: 'no'})
            .form-elements__bullet-list
              .form-elements__bullet-list-text Bullet list
              .form-elements__bullet-list-element
              +bullet-list()
      .form-elements__footer
        .form-elements__room-info
          +room-info()
        .form-elements__review
          +review({name: 'Мурад Сарафанов', date: '5 дней назад', text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'})
