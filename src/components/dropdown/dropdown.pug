mixin dropdown(options)
  .iqdropdown
    p.iqdropdown-selection
    .iqdropdown-menu
      .iqdropdown-menu-option(data-id="item1")
        .iqdropdown__wrapper
          p.iqdropdown-item Спальни
      .iqdropdown-menu-option(data-id="item2")
        .iqdropdown__wrapper
          p.iqdropdown-item Кровати
      .iqdropdown-menu-option(data-id="item3")
        .iqdropdown__wrapper
          p.iqdropdown-item Ванные комнаты
      .iqdropdown__footer
        span Очистить
        span Применить