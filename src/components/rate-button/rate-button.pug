mixin rate-button(options)
  - 
    let count=options.count
    if (count > 5) {
      count = 5;
    } else if (count < 0) {
      count = 0;
    }
  .rate-button
    - i = 0;
    while i< count
      .rate-button__stars.material-icons star
      - i += 1;
    - i = 0;
    while i< (5-count)
      .rate-button__stars.material-icons star_border
      - i += 1;

mixin rate-buttonn(options)
  - let i = 0;
  - let count = options.count - 1
  .rate-button
    while i < 5
      if (i <= count)
        .rate-button__stars.material-icons star
      else if (i > count)
        .rate-button__stars.material-icons star_border
      - i += 1;